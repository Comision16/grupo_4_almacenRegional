<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : 'DETALLE' }) %>

  <body>
    <%- include('../partials/header') %>  
    <main class="main__detalleProducto">
      <div class="container my-5  products-wrapper">
        <div class="product-detail">
          <div class="row">
            <div class="col-12 col-md-7 col-lg-6 my-auto">
              <img src="/images/products/<%= product.image %>" alt="product image" class="img-fluid mx-auto d-block">
              
            </div>
            <div class="col-12 col-md-5 col-lg-6 my-auto">
              <article class="product-detail-info">
                <span class="item__info--licence"><%= product.category.name %></span>
                <h2 class="product-detail-title"><%= product.name %></h2>
                <p class="product-detail-description">
                  <%= product.description %>
                </p>
                <% if (product.discount) { %>
                  
                    <span class="productDetail_precio-subrall">$<%= toThousand(product.price) %></span>
                  
                  <p class= "product-detail-priceDiscount col-12 d-flex">
                    <span class="product-detail-price">$<%= toThousand(product.price-(product.price*product.discount/100).toFixed(0)) %></span>
                    <span class="product-detail-discount"><%= product.discount%>% OFF</span>
                  </p>
                  
                <% } else{ %>
                  <p class="product-detail-price">
                    $<%= toThousand(product.price) %>
                  </p>
    
                <% } %>
                <div class="product__detail--cantidad-disponible my-4">
                  <label class="product-detail-cantidad" for="cantidad">Cantidad:</label>
                <select class="product-detail-disponible" id="cantidad" name="cantidad">
                    <option value="1">1 unidad</option>
                    <option value="2">2 unidades</option>
                    <option value="3">3 unidades</option>
                    <option value="4">4 unidades</option>
                    <!-- Agrega más opciones según sea necesario -->
                </select>
                <span id="disponible">(3 disponibles)</span>
                </div>
                
                <div class="col-12 d-flex flex-column gap-3">
                  <button  type="button" onclick="addItemToCart(1,'<%=product.id%>')" class="btn btn-primary">COMPRAR AHORA</button>
                  <button type="button"  class="btn btn-light buy-now-button">AGREGAR AL CARRITO</button>
                </div>
                
                
              </article>
            </div>
          </div>
        </div>
      </div>
      <section class="section__productosDetail">
        <%- include('../components/carousel-destacados') %>
      </section>

      
    </main>  
    <%- include('../partials/scripts') %>
    <%- include('../partials/footer') %>
    <%- include('../components/scriptSlider') %>
    

  </body>

</html>