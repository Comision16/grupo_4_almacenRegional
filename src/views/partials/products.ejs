<a href="/products/detalleProducto/<%= product.id %>">
    <div class="home_producto">
        <div class="home_producto-img">
            <img src="/images/products/<%= product.images[0].file %>" alt="Vino">
        </div>
        <div class="home_info">
            <span class="home_tipo-envio">Envio con Normalidad</span>
            <div class="home_precio-oferta">

                <% if (product.discount) { %>
                    <p class="home_info-precio"><span class="home_precio-subrall" >$<%= toThousand(product.price) %></span></p>
                    <span class= "home_precio">$<%=toThousand(product.price - (product.price*product.discount/100).toFixed(0))%></span>
                    <span class="home_oferta"><%= product.discount %> % OFF</span>

                    <% } else{ %>
                        <span class="home_precio">$<%= toThousand(product.price) %></span>
                        
                        <% } %>

            </div>
            <span class="home_precio-envio">Envio gratis</span>
            <span class="home_descripcion">
                <%= product.name %>
            </span>
            <div class="home_calificacion">
                <span><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                        class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i></span>
                <span>19999</span>
            </div>

        </div>

    </div>
</a>